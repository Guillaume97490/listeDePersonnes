<% include ../partials/head.ejs %>

<form <% if(locals.dataEdit){ %>action="/personne/update/<%= dataEdit._id %>"<% } else{ %>action="/personne/save"<% } %>
    method="post">

    <div class="container">
        <div class="row">
            <div class="col-4">
                <label for="lastname">Nom</label>
                <input required class="form-control" <% if(locals.dataEdit){ %> value="<%= dataEdit.lastname %>" <% } %> type="text" name="lastname" id="lastname">
            </div>
            <div class="col-4">
                <label for="firstname">Pr√©nom</label>
                <input required class="form-control" <% if(locals.dataEdit){ %> value="<%= dataEdit.firstname %>" <% } %> type="text" name="firstname" id="firstname">
            </div>
            <div class="col-4">
                <label for="domain">Domaine</label>
                <input required class="form-control" <% if(locals.dataEdit){ %> value="<%= dataEdit.domain %>" <% } %> type="text" name="domain" id="domain">
            </div>
            <div class="col-4">
                <label for="city">Ville</label>
                <input required class="form-control" <% if(locals.dataEdit){ %> value="<%= dataEdit.city %>" <% } %> type="text" name="city" id="city">
            </div>
            <div class="col-4">
                <label for="doB">Date de naissance</label>
                <input required class="form-control" <% if(locals.dataEdit){ %> value="<%= dataEdit.doB %>" <% } %> type="date" name="doB" id="doB">
            </div>
            <div class="col-4">
                <label for="dateChoisi">Date choisi</label>
                <input required class="form-control" <% if(locals.dataEdit){ %> value="<%= dataEdit.dateChoisi %>" <% } %> type="date" name="dateChoisi" id="dateChoisi">
            </div>
            <div class="col-4">
                <label for="photo">Photo</label>
                <input required class="form-control" <% if(locals.dataEdit){ %> value="<%= dataEdit.photo %>" <% } %> type="file" name="photo" id="photo">
            </div>
            
            <div class="col-2 mgt-auto">
                <label for="text">Genre</label>
                <select required class="form-control" name="genre" id="genre">
                    <option <% if(locals.dataEdit){ %> <% if(dataEdit.text == 'h'){ %> selected <% } %>  <% } %> value="h">Homme</option>
                    <option <% if(locals.dataEdit){ %> <% if(dataEdit.text == 'f'){ %> selected <% } %>  <% } %> value="f">Femme</option>
                </select>
            </div>
            <div class="col-12 mgt-auto">
                <button type="submit" class="btn btn-primary">
                    <% if(locals.dataEdit){ %>
                        Modifier
                    <% } else{ %>
                        Ajouter
                    <% } %>
                </button>
            </div>
        </div>
    </div>


    <% if(locals.errorMsg) { %>
        <h3 class="text-center mgy-40 text-danger"><%= locals.errorMsg %></h3>
    <% } %>
    


    <% if(locals.dataEdit) { %>
        <input value="<%= dataEdit._id %>" type="hidden" name="id">
    <% } %> 

</form>
<% include ../partials/footer.ejs %>

   